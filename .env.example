# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/smart_calculator
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=smart_calculator
POSTGRES_PORT=5432

# Application Configuration
NODE_ENV=development
PORT=3456
APP_PORT=3456
APP_INTERNAL_PORT=3456

# JWT Configuration (REQUIRED - Generate a strong random secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_RANDOM_SECRET_AT_LEAST_32_CHARACTERS

# Nginx Configuration (for production)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# File Storage Configuration
STORAGE_TYPE=local
STORAGE_PATH=./uploads
# For S3-compatible storage:
# STORAGE_TYPE=s3
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# S3_ACCESS_KEY_ID=your-access-key
# S3_SECRET_ACCESS_KEY=your-secret-key

# Logging Configuration
LOG_LEVEL=info

# Super Admin Configuration (REQUIRED - Change these values)
SUPER_ADMIN_USERNAME=your_admin_username
SUPER_ADMIN_PASSWORD=your_strong_password_here
SUPER_ADMIN_EMAIL=admin@yourdomain.com
